{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "eslint",
    "typescript",
    "react",
    "react-perf",
    "nextjs",
    "jsx-a11y",
    "unicorn",
    "import"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "ignorePatterns": [".next/**", "out/**", "build/**", "next-env.d.ts", "node_modules/**"],
  "rules": {
    "typescript/no-floating-promises": "error",
    "typescript/no-misused-promises": "error"
  }
}
